{
    "name": "nodejs-threejs-ssr",
    "description": "Node.js server-side Renderer for Three.js",
    "version": "0.0.1",
    "private": true,
    "author": "Neutral Unit",
    "contributors": [],
    "scripts": {
        "build": "rm -rf ./bin && webpack --mode development --config ./config/webpack.config.js",
        "prod": "node ./bin/server.js",
        "nodemon": "nodemon ./bin/server.js",
        "watch:backEnd": "webpack --watch --mode development --config ./config/webpack.config.js",
        "startAll": "npm-run-all -p nodemon watch:backEnd"
    },
    "dependencies": {
        "gl": "4.3.3",
        "three": "0.108.0",
        "pngjs": "3.4.0",
        "uuid": "3.3.3"
    },
    "devDependencies": {
        "@babel/core": "7.6.0",
        "@babel/preset-env": "7.6.0",
        "babel-loader": "8.0.6",
        "nodemon": "1.19.2",
        "webpack": "4.39.3",
        "webpack-cli": "3.3.6",
        "uglifyjs-webpack-plugin": "2.2.0",
        "npm-run-all": "4.1.5",
        "@types/gl": "4.1.0",
        "@types/uuid": "3.4.5"
    },
    "keywords": []
}
